{
	"name": "Backup",
	"description": "Create backups of instances",
	"protocol_version": 3,
	"hooks": {
		"subcommand": {
			"executable": "${PLUGIN_DIR}/mcvm_plugin_backup${EXE_EXTENSION}"
		},
		"on_instance_launch": {
			"executable": "${PLUGIN_DIR}/mcvm_plugin_backup${EXE_EXTENSION}"
		},
		"on_instance_stop": {
			"executable": "${PLUGIN_DIR}/mcvm_plugin_backup${EXE_EXTENSION}"
		},
		"while_instance_launch": {
			"executable": "${PLUGIN_DIR}/mcvm_plugin_backup${EXE_EXTENSION}"
		}
	},
	"subcommands": {
		"backup": "Manage backups for instances",
		"back": "Manage backups for instances"
	}
}