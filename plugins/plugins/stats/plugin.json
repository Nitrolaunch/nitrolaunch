{
	"name": "Stats",
	"description": "Track and view playtime stats",
	"protocol_version": 3,
	"hooks": {
		"subcommand": {
			"executable": "${PLUGIN_DIR}/nitro_plugin_stats${EXE_EXTENSION}"
		},
		"on_instance_launch": {
			"executable": "${PLUGIN_DIR}/nitro_plugin_stats${EXE_EXTENSION}"
		},
		"on_instance_stop": {
			"executable": "${PLUGIN_DIR}/nitro_plugin_stats${EXE_EXTENSION}"
		},
		"while_instance_launch": {
			"executable": "${PLUGIN_DIR}/nitro_plugin_stats${EXE_EXTENSION}"
		},
		"add_instance_tiles": {
			"executable": "${PLUGIN_DIR}/nitro_plugin_stats${EXE_EXTENSION}"
		}
	},
	"subcommands": {
		"stats": "View playtime stats"
	}
}