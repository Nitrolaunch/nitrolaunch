{
	"name": "Weld",
	"description": "Weld data and resource packs together for better compatability",
	"protocol_version": 3,
	"raw_transfer": true,
	"hooks": {
		"on_instance_setup": {
			"executable": "python3",
			"args": [
				"${PLUGIN_DIR}/nitro_weld.py"
			],
			"priority": "last"
		},
		"after_packages_installed": {
			"executable": "python3",
			"args": [
				"${PLUGIN_DIR}/nitro_weld.py"
			],
			"priority": "last"
		},
		"update_world_files": {
			"executable": "python3",
			"args": [
				"${PLUGIN_DIR}/nitro_weld.py"
			],
			"priority": "last"
		}
	}
}