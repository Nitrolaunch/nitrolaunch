{
	"name": "Smithed",
	"description": "Install Smithed packs on profiles and instances",
	"protocol_version": 3,
	"hooks": {
		"add_sidebar_buttons": {
			"constant": [
				{
					"html": "<div style=\"margin-top:0.3rem;margin-right:-0.2rem\"><img src=\"https://smithed.net/favicon.png\" style=\"width: 16px\" /></div><div>Smithed</div>",
					"href": "/custom/smithed",
					"selected_url_start": "/custom/smithed",
					"color": "#1b48c4"
				}
			]
		},
		"get_page": {
			"cases": {
				"\"smithed\"": {
					"file": "page.html"
				}
			}
		},
		"add_custom_package_repositories": {
			"constant": [
				{
					"id": "smithed",
					"is_preferred": false,
					"metadata": {
						"name": "Smithed",
						"description": "Package repository for packs from the Smithed website",
						"color": "#1b48c4",
						"text_color": "#f6f6f6",
						"package_types": [
							"resource_pack",
							"datapack"
						],
						"package_categories": [
							"extensive",
							"lightweight",
							"tweaks",
							"vanilla_plus",
							"technology",
							"magic",
							"exploration",
							"worldgen",
							"library"
						]
					}
				}
			]
		},
		"query_custom_package_repository": {
			"executable": "${PLUGIN_DIR}/mcvm_plugin_smithed${EXE_EXTENSION}"
		},
		"preload_packages": {
			"executable": "${PLUGIN_DIR}/mcvm_plugin_smithed${EXE_EXTENSION}"
		},
		"search_custom_package_repository": {
			"executable": "${PLUGIN_DIR}/mcvm_plugin_smithed${EXE_EXTENSION}"
		},
		"sync_custom_package_repository": {
			"executable": "${PLUGIN_DIR}/mcvm_plugin_smithed${EXE_EXTENSION}"
		}
	}
}