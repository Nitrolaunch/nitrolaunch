{
	"name": "Smithed",
	"description": "Install Smithed packs on templates and instances",
	"version": "v5",
	"protocol_version": 3,
	"hooks": {
		"get_page": {
			"cases": {
				"\"smithed\"": {
					"file": "page.html"
				}
			}
		},
		"add_templates": {
			"constant": {
				"smithed-base": {
					"name": "Smithed Base",
					"icon": "https://smithed.net/favicon.png",
					"loader": "fabric",
					"packages": [
						{
							"id": "modrinth:unjank",
							"optional": true
						},
						"modrinth:datapack-injector"
					],
					"datapack_folder": "datapacks"
				}
			}
		},
		"add_instance_icons": {
			"constant": [
				"https://smithed.net/favicon.png"
			]
		},
		"add_custom_package_repositories": {
			"constant": [
				{
					"id": "smithed",
					"is_preferred": false,
					"metadata": {
						"name": "Smithed",
						"description": "Package repository for packs from the Smithed website",
						"color": "#1b48c4",
						"text_color": "#f6f6f6",
						"package_types": [
							"resource_pack",
							"datapack"
						],
						"package_categories": [
							"extensive",
							"lightweight",
							"tweaks",
							"vanilla_plus",
							"technology",
							"magic",
							"exploration",
							"worldgen",
							"library"
						]
					}
				}
			]
		},
		"query_custom_package_repository": {
			"executable": "${PLUGIN_DIR}/nitro_plugin_smithed${EXE_EXTENSION}"
		},
		"preload_packages": {
			"executable": "${PLUGIN_DIR}/nitro_plugin_smithed${EXE_EXTENSION}"
		},
		"search_custom_package_repository": {
			"executable": "${PLUGIN_DIR}/nitro_plugin_smithed${EXE_EXTENSION}"
		},
		"sync_custom_package_repository": {
			"executable": "${PLUGIN_DIR}/nitro_plugin_smithed${EXE_EXTENSION}"
		}
	}
}