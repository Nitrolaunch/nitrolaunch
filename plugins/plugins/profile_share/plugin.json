{
	"name": "Profile Share",
	"description": "Easily share profiles with friends",
	"protocol_version": 3,
	"hooks": {
		"subcommand": {
			"executable": "${PLUGIN_DIR}/nitro_plugin_profile_share${EXE_EXTENSION}"
		},
		"add_dropdown_buttons": {
			"constant": [
				{
					"plugin": "profile_share",
					"location": "add_profile_or_instance",
					"icon": "<svg xmlns=\"http://www.w3.org/2000/svg\" width=\"16\" height=\"16\" viewBox=\"0 0 16 16\" fill=\"currentColor\"><path d=\"m11 2c1.662 0 3 1.338 3 3v2h1c0.554 0 1 0.446 1 1s-0.446 1-1 1h-1v2c0 1.662-1.338 3-3 3-0.55228 0-1-0.44772-1-1s0.44772-1 1-1c0.554 0 1-0.446 1-1v-6c0-0.554-0.446-1-1-1-0.55228 0-1-0.44772-1-1s0.44772-1 1-1zm-6 0c-1.662 0-3 1.338-3 3v2h-1c-0.554 0-1 0.446-1 1s0.446 1 1 1h1v2c0 1.662 1.338 3 3 3 0.55228 0 1-0.44772 1-1s-0.44772-1-1-1c-0.554 0-1-0.446-1-1v-6c0-0.554 0.446-1 1-1 0.55228 0 1-0.44772 1-1s-0.44772-1-1-1z\" /></svg>",
					"text": "Profile from Code",
					"tip": "Import a profile from a Profile Share Code",
					"on_click": "$file:import.js"
				}
			]
		},
		"inject_page_script": {
			"property": "page",
			"cases": {
				"\"instances\"": {
					"file": "export.js"
				}
			}
		},
		"custom_action": {
			"executable": "${PLUGIN_DIR}/nitro_plugin_profile_share${EXE_EXTENSION}"
		}
	},
	"subcommands": {
		"share": {
			"supercommand": "profile",
			"description": "Share a profile with a code"
		},
		"use": {
			"supercommand": "profile",
			"description": "Download a profile from a code"
		}
	}
}