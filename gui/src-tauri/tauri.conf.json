{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Nitrolaunch",
    "version": "0.26.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "protocol": {
        "asset": true,
        "assetScope": {
          "allow": [
            "$APPCACHE/**",
            "$RESOURCE/**",
            "/home/**"
          ],
          "requireLiteralLeadingDot": false
        }
      },
      "clipboard": {
        "all": true
      },
      "window": {
        "create": true,
        "close": true
      },
      "dialog": {
        "open": true,
        "save": true
      }
    },
    "windows": [
      {
        "title": "Nitrolaunch",
        "width": 1200,
        "height": 900
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "img-src": "'self' asset: https://asset.localhost *",
        "script-src": "'self' 'unsafe-eval'"
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "nitro-gui",
      "icon": [
        "icons/icon_1024x1024.png",
        "icons/icon.ico",
        "icons/icon.icns"
      ]
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/Nitrolaunch/nitrolaunch/blob/main/gui/update/update.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDc0QjRCMjY2RkI2QzM4NkIKUldSck9HejdackswZEJvRTFuM0hvSkFzcnRYcmNETXRiNmRnZ1Q5Y05rYUZKczhHOUNFMzFmWkYK"
    }
  }
}