{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://127.0.0.1:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon_1024x1024.png",
      "icons/icon.ico",
      "icons/icon.icns"
    ],
    "createUpdaterArtifacts": "v1Compatible"
  },
  "productName": "Nitrolaunch",
  "mainBinaryName": "Nitrolaunch",
  "version": "0.27.0",
  "identifier": "nitro-gui",
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDc0QjRCMjY2RkI2QzM4NkIKUldSck9HejdackswZEJvRTFuM0hvSkFzcnRYcmNETXRiNmRnZ1Q5Y05rYUZKczhHOUNFMzFmWkYK",
      "endpoints": [
        "https://github.com/Nitrolaunch/nitrolaunch/blob/main/gui/update/update.json"
      ]
    }
  },
  "app": {
    "security": {
      "assetProtocol": {
        "scope": {
          "allow": [
            "$APPCACHE/**",
            "$RESOURCE/**",
            "/home/**"
          ],
          "deny": [],
          "requireLiteralLeadingDot": false
        },
        "enable": true
      },
      "csp": {
        "default-src": "'self'",
        "script-src": "'self' 'unsafe-eval'",
        "connect-src": [
          "ipc: http://ipc.localhost"
        ],
        "img-src": "'self' asset: https://asset.localhost *"
      }
    },
    "windows": [
      {
        "title": "Nitrolaunch",
        "width": 1200,
        "height": 900,
        "useHttpsScheme": true
      }
    ]
  }
}